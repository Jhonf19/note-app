<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card bg-dark text-light">
      <div class="card-header">
        Registro
      </div>
      <div class="card-body">
        <form class="" action="/users/add" method="post">
          <div class="form-group">
            <label for="">Nombre</label>
            <input class="form-control bg-dark text-light" type="text" name="nombre" autofocus>
          </div>
          <div class="form-group">
            <label for="">E-mail</label>
            <input class="form-control bg-dark text-light" type="email" name="email">
          </div>
          <div class="form-group">
            <label for="">Contraseña</label>
            <input class="form-control bg-dark text-light" type="password" name="password" >
          </div>
          <div class="form-group">
            <label for="">Confirmar contraseña</label>
            <input class="form-control bg-dark text-light" type="password" name="conf_password" >
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-info btn-block">Registrarme</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
